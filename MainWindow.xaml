<!-- MainWindow.xaml -->
<Window x:Class="ArchiveSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Домашний архив" Height="450" Width="800">

	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock Text="Домашний архив" FontSize="24" FontWeight="Bold"/>
			<Button Content="Тест логирования" Click="TestButton_Click"
                    Margin="0,20,0,0" Padding="20,10"/>
